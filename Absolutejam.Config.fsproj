<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Absolutejam.Config</PackageId>
    <Description>IConfiguration helpers with a functional twist</Description>
    <Authors>James Booth</Authors>
    <PackageTags>fsharp;configuration</PackageTags>
    <RepositoryUrl>https://gitlab.com/absolutejam-nuget/absolutejam-config</RepositoryUrl>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>1.0.0</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Config.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="6.0.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="6.0.0" />
  </ItemGroup>

</Project>
